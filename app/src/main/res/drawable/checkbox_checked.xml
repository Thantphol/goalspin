<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Layer 1: พื้นหลังวงกลมสีเขียว -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#00FF00"/> <!-- หรือใช้สีเขียวที่คุณชอบ -->
            <size android:width="24dp" android:height="24dp"/>
        </shape>
    </item>

    <!-- Layer 2: รูปเครื่องหมายถูกสีขาว -->
    <item
        android:drawable="@drawable/outline_check_24"
        android:top="4dp"
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"/>
    <!-- ^ ปรับ padding เพื่อให้เครื่องหมายถูกมีขนาดพอดีกับวงกลม -->
</layer-list>