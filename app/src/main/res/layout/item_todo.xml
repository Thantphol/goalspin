<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/woodfame"
        android:paddingStart="52dp"
        android:paddingEnd="60dp"
        android:paddingTop="30dp"
        android:paddingBottom="34dp"
        android:minHeight="140dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Checkbox -->
        <CheckBox
            android:id="@+id/cbTask"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_selector"
            app:buttonTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- ช่องกรอกข้อความ (ขยายให้เต็มพื้นที่มากขึ้นเพราะไม่มี Claim แล้ว) -->
        <EditText
            android:id="@+id/etTaskInput"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Add Task ..."
            android:textColorHint="#80E0D0C0"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@null"
            android:inputType="textCapSentences"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@id/cbTask"
            app:layout_constraintEnd_toStartOf="@id/btnAdd"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <!-- ปุ่ม Save เล็กๆ ในกรอบ (เก็บไว้เผื่อกดยืนยันข้อความ) -->
        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="#B8860B"
            android:background="@drawable/outline_check_24"
            android:clickable="true"
            android:focusable="true"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <!-- เปลี่ยนไอคอนเป็น ic_menu_save ให้สื่อว่าบันทึกข้อความ -->

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>