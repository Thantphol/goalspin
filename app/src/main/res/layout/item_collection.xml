<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 1. รูปภาพ (อยู่ชั้นล่าง) -->
        <ImageView
            android:id="@+id/ivCollectionImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_scroll"/>

        <!-- 2. กรอบรูป (อยู่ชั้นบนสุด) -->
        <!-- ตั้ง ID ใหม่ว่า frameOverlay -->
        <View
            android:id="@+id/frameOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/default_frame"/>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>